{
  "manifest_version": 2,
  "name": "Hey Beter",
  "short_name": "Beter",
  "version": "1.3.1",
  "description": "Fixes webpages by replacing the letter 'B' to the B emoji 50% of the time.",
  
  "icons": {
    "16": "image/icon16.png",
    "19": "image/icon19.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },
  
  "browser_action": {
    "default_icon": "image/icon19.png",
    "default_title": "Click to disable"
  },
  
  "background" : {
    "scripts" : ["background.js"]
  },

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content.js"],
    "run_at": "document_end" 
  }],

  "permissions": [
    "activeTab",
    "storage" 
  ]
}
